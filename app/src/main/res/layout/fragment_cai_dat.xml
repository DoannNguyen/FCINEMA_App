<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lnSettings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.CaiDatFragment">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Cài đặt"
            android:textSize="18dp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgAnhTaiKhoan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/img_5"
                    app:civ_border_color="@color/primary"
                    app:civ_border_width="1dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNameST"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:text="Name"
                    android:textColorHint="@color/primary"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvEmailST"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:text="Name"
                    android:textColorHint="@color/primary"
                    android:textSize="14dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="3dp"
        android:divider="@drawable/divider"
        android:orientation="vertical"
        android:showDividers="middle">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <TextView
            android:id="@+id/tvChangeInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawableLeft="@drawable/account"
            android:drawableRight="@drawable/arrow_srg"
            android:drawablePadding="12dp"
            android:gravity="center|left"
            android:padding="12dp"
            android:text="Thông tin cá nhân "
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tvChangePass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawableLeft="@drawable/lock_password_unlocked_svgrepo_com"
            android:drawableRight="@drawable/arrow_srg"
            android:drawablePadding="12dp"
            android:gravity="center|left"
            android:padding="12dp"
            android:text="Đổi mật khẩu "
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tvNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawableLeft="@drawable/alert"
            android:drawableRight="@drawable/arrow_srg"
            android:drawablePadding="12dp"
            android:gravity="center|left"
            android:padding="12dp"
            android:text="Thông báo "
            android:textColor="@color/black"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/tvAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawableLeft="@drawable/information_srg"
            android:drawableRight="@drawable/arrow_srg"
            android:drawablePadding="12dp"
            android:gravity="center|left"
            android:padding="12dp"
            android:text="Giới thiệu"
            android:textColor="@color/black"
            android:textSize="14dp" />


            <TextView
                android:id="@+id/tvLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:background="@drawable/border_shape"
                android:backgroundTint="?attr/colorPrimary"
                android:drawableLeft="@drawable/sign_out"
                android:drawableRight="@drawable/arrow_srg"
                android:drawablePadding="10dp"
                android:drawableTint="@color/white"
                android:gravity="center|left"
                android:padding="10dp"
                android:text="Đăng xuất"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14dp" />




    </LinearLayout>


</LinearLayout>