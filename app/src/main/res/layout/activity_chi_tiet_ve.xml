<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ChiTietVeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarCTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark">

        <ImageView
            android:id="@+id/imgBackFromDetailVe"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/backarrow1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Chi Tiết Vé"
            android:textSize="16dp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/lightGrey" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ticket"
                android:drawablePadding="10dp"
                android:gravity="center|left"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Thông tin cơ bản"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:paddingLeft="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/imgPosterDetailVe"
                        android:layout_width="102dp"
                        android:layout_height="144dp"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tenPhimCTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ký Sinh Trùng"
                                android:textAlignment="center"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/giaTienCTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="75.000"
                                android:textAlignment="center"
                                android:textSize="14dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:text="Mã vé"
                                android:textAlignment="textStart"
                                android:textSize="13dp"
                                android:textStyle="italic" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:text="Ngày chiếu"
                                android:textAlignment="textStart"
                                android:textSize="13dp"
                                android:textStyle="italic" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:text="Ca chiếu"
                                android:textAlignment="textStart"
                                android:textSize="13dp"
                                android:textStyle="italic" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:text="Phòng chiếu"
                                android:textAlignment="textStart"
                                android:textSize="13dp"
                                android:textStyle="italic" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:text="Vị trí ghế"
                                android:textAlignment="textStart"
                                android:textSize="13dp"
                                android:textStyle="italic" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/maveCTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="VIET01"
                                android:textAlignment="textEnd"
                                android:textSize="13dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/ngaychieuCTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="20-12-2023"
                                android:textAlignment="textEnd"
                                android:textSize="13dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvCaChieuCTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ca chiếu"
                                android:textAlignment="textEnd"
                                android:textSize="13dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/phongchieuCTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Phòng 01"
                                android:textAlignment="textEnd"
                                android:textSize="13dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/sogheCTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="C14"
                                android:textAlignment="textEnd"
                                android:textSize="13dp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:gravity="center|left"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="Chi tiết sản phẩm"
        android:textStyle="bold" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvHiddenDetailTicket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Không có mục nào để hiển thị"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ListView
            android:id="@+id/lvDoAn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="150dp"
            tools:itemCount="2"
            tools:listitem="@layout/do_an_item_layout2"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:gravity="center|left"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:text="Thành tiền"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tổng thanh toán"
                android:textSize="13dp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hình thức thanh toán"
                android:textSize="13dp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Trạng thái"
                android:textSize="13dp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ngày mua"
                android:textSize="13dp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/tongTTCTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="50.000 đ"
                android:textAlignment="textEnd"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/thanhtoanCTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiền mặt"
                android:textAlignment="textEnd"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/trangthaiCTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Đã thanh toán"
                android:textAlignment="textEnd"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/thoigianCTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="20-12-2023"
                android:textAlignment="textEnd"
                android:textSize="13dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>